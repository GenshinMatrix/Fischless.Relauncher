<Window x:Class="Relauncher.Views.GenshinSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Relauncher.Views.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Relauncher.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:ws="https://schemas.elecho.dev/wpfsuite"
        Title="Window1"
        Width="800"
        Height="500"
        Background="#212429"
        FontSize="14"
        Foreground="#FFFFFF"
        MouseDown="OnMouseDown"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="0"
                      GlassFrameThickness="1"
                      ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Grid>
        <TextBlock Margin="18"
                   FontSize="16"
                   Text="原神重启动器客户端" />
        <Button Margin="8"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding CloseWindowCommand}"
                Style="{StaticResource CloseButtonStyle}">
            <Button.Content>
                <Border Padding="5.5">
                    <Image Width="16"
                           Height="16"
                           RenderOptions.BitmapScalingMode="Fant"
                           Source="pack://application:,,,/Relauncher;component/Assets/Images/Close.png">
                        <Image.Effect>
                            <DropShadowEffect BlurRadius="1"
                                              Opacity="0.7"
                                              ShadowDepth="0.6"
                                              Color="Black" />
                        </Image.Effect>
                    </Image>
                </Border>
            </Button.Content>
        </Button>
        <ScrollViewer Margin="16,54,0,8"
                      PanningMode="None"
                      VerticalScrollBarVisibility="Visible">
            <ws:StackPanel Margin="0,0,16,0" Spacing="8">
                <TextBlock Margin="4,0,0,4"
                           FontSize="14"
                           Foreground="#87898B"
                           Text="启动设置" />
