                                    <ui:ToggleSwitch />
                                </ws:StackPanel>
                            </Grid>
                            <Separator />
                            <Grid Margin="42,0,28,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
