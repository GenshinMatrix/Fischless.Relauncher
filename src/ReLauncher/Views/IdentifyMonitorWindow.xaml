<Window x:Class="Relauncher.Views.IdentifyMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Relauncher.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ws="https://schemas.elecho.dev/wpfsuite"
        Title="IdentifyMonitorWindow"
        Width="80"
        Height="45"
        Background="Black"
        Foreground="#FFFFFF"
        ShowInTaskbar="False"
        SizeToContent="Height"
        Topmost="True"
        WindowStartupLocation="Manual"
        mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="0"
                      GlassFrameThickness="1"
                      ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Border Padding="24">
        <ws:StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Spacing="3">
            <TextBlock FontSize="16" Text="显示器编号" />
            <TextBlock FontSize="20"
                       Text="{Binding Monitor}"
                       TextAlignment="Center" />
        </ws:StackPanel>
    </Border>
</Window>
